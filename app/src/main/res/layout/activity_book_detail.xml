<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookDetail"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Detail"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginBottom="140dp"/>

    <ImageView
        android:id="@+id/imageFormDetail"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginRight="120dp"
        android:src="@drawable/ic_launcher_background"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="45dp"/>
    <TextView
        android:id="@+id/author_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="65dp"
        />
    <TextView
        android:id="@+id/sypnosis_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jlasdfk;a;sdfka;sdfka;sdfkasdfk;asdfk;asdfk;asdfk;a;sdfka;sdfka;sdfka;sdfkasdfk;asdfk;asdfk;asdfk;asdfk;asdfk;a;sdfka;sdfka;sdfkasdfk;asdfk;asdfk;asdfk;asdfk;a;sdfka;sdfka;sdfka;sdfk;"
        android:textSize="12dp"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="290dp"
        android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/buttonRequestBookDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Borrowing"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        />
    </LinearLayout>
</ScrollView>