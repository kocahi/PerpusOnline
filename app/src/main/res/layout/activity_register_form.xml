<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerForm"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="12dp"
    android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40dp"
        />
    <EditText
        android:id="@+id/et_emailRegister"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_passwordRegister"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_phoneNumberRegister"
        android:hint="phone number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerTxtView"
        android:layout_marginTop="15dp"
        android:text="Pick Date"
        android:textSize="20dp"
        android:textColor="@color/teal_700"
        />


    <CheckBox
        android:id="@+id/agreeChkBx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="setuju dengan terms and agreement"
        />

    <Button
        android:id="@+id/SubmitRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register now"
        />





</LinearLayout>